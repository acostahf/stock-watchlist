<%- include('../partials/header') %>
<table class="table table-striped table-dark" id="list">
  <thead>
    <tr>
      <th>Stock</th>
      <th>price</th>
      <th>buy</th>
      <th>sell</th>
    </tr>
  </thead>
  <form d="update-stock-form" method="POST" action="/stocks">
    <input type="text" name="symbol" placeholder="symbol" />
    <input type="number" name="price" placeholder="price" />
    <input type="number" name="buy" placeholder="buy" />
    <input type="number" name="sell" placeholder="sell" />
    <input type="submit" value="update" />
  </form>
  <tbody>
    <% traders.forEach(function(trader) { %>
    <% trader.stocks.forEach(function(stock) { %>


    <tr>
      <td><%= stock.symbol %></td>
      <td><%= stock.price %></td>
      <td><%= stock.buy %></td>
      <td><%= stock.sell %></td>


      <td>
        <% if (trader._id.equals(user && user._id)) { %>
        <form action="/stocks/<%= stock._id %>?_method=DELETE" method="POST" class="secondary-content">
          <button type="submit">X</button>
        </form>
        <% } %>

        </form>
      </td>
    </tr>
    <% }); %>
    <% }); %>

  </tbody>
  <% traders.forEach(function(t) { %>
  <h1><%=t.symbol%></h1>
  <% }); %>
  <%- include('../partials/footer') %>