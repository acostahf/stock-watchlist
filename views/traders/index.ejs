<%- include('../partials/header') %>
<table class="table table-striped table-dark" id="list">
  <thead>
    <tr>
      <th>Stock</th>
      <th>price</th>
      <th>buy</th>
      <th>sell</th>
    </tr>
  </thead>
  <form d="add-stock-form" method="POST" action="/stocks">
    <input type="text" name="symbol" placeholder="symbol" />
    <input type="number" name="price" placeholder="price" />
    <input type="number" name="buy" placeholder="buy" />
    <input type="number" name="sell" placeholder="sell" />
    <input type="submit" value="Add Stock" />
  </form>
  <tbody>
    <% traders.forEach(function(trader) { %>
    <% trader.stocks.forEach(function(u) { %>
    <tr>
      <td><%= u.symbol %></td>
      <td><%= u.price %></td>
      <td><%= u.buy %></td>
      <td><%= u.sell %></td>
      <td><a href="">DETAILS</a></td>

      <td>
        <% if (trader._id.equals(user && user._id)) { %>
        <form action="/stocks/<%= u._id %>?_method=DELETE" method="POST" class="secondary-content">
          <button type="submit">X</button>
        </form>
        <% } %>

        </form>
      </td>
    </tr>
    <% }); %>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>