<div class="col-8">
<table class="table table-striped table-dark" id="list">
  <thead>
    <tr>
      <th>Trader</th>
      <th>Stock</th>
      <th># of Shares</th>
      <th>Buy Price</th>
      <th>Sell Price</th>
    </tr>
  </thead>

  <tbody>
    <% traders.forEach(function(trader) { %>
    <% trader.stocks.forEach(function(u) { %>
    <tr>
      <td><%= trader.name %></td>
      <td><%= u.symbol %></td>
      <td><%= u.shares %></td>
      <td><%= u.buy %></td>
      <td><%= u.sell %></td>

      
       
      <% if (trader._id.equals(user && user._id)) { %>


        <td><a href="/traders/<%= u._id %>/stocks">Details</a></td>
        <td>
          <form action="/stocks/<%= u._id %>?_method=DELETE" method="POST" class="secondary-content">
            <button type="submit" class="btn btn-danger btn-sm">x</button>
          </form>
        </td>


          <% } %>

        
      
    </tr>
    <% }); %>
    <% }); %>
  </tbody>
