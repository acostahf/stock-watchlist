<%- include('../partials/header') %>
<table class="table table-striped table-dark" id="list">
  <thead>
    <tr>
      <th>Stock</th>
      <th>price</th>
      <th>buy</th>
      <th>sell</th>
    </tr>
  </thead>
  <tbody>
    <% stocks.forEach(function(m) { %>
    <tr>
      <td><%= m.symbol %></td>
      <td><%= m.price %></td>
      <td><%= m.buy %></td>
      <td><%= m.sell %></td>
      <td><a href="/stocks/<%= m._id %>">DETAILS</a></td>

      <td>
        <form
          action="stocks/<%= m._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
