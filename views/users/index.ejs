<%- include('../partials/header') %>
<table class="table table-striped table-dark" id="list">
  <thead>
    <tr>
      <th>Stock</th>
      <th>price</th>
      <th>buy</th>
      <th>sell</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user) { %>
    <tr>
      <td><%= user.symbol %></td>
      <td><%= user.price %></td>
      <td><%= user.buy %></td>
      <td><%= user.sell %></td>
      <td><a href="/users/<%= user._id %>">DETAILS</a></td>

      <td>
        <form
          action="users/<%= user._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

